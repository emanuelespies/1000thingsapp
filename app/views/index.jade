doctype html
html
	head
		link(href='/css/built.min.css', rel='stylesheet')
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		
		
		title!= title
	body

	div.one-thousand-layout.one-thousand-home-layout.mdl-layout.mdl-js-layout.mdl_layout__container
		header.mdl-layout__header.mdl-layout__header.mdl-color--white
			div.mdl-layout__header-row
				<!-- Title -->
				h1.mdl-layout-title
					img(src='/img/logo.png' alt='Welcome To 1000thingsapp')
				div.mdl-layout-spacer
				<!-- Navigation -->
				nav.mdl-navigation
					a.mdl-navigation__link(href="#") Sign Up
					a.mdl-navigation__link(href="#") Log In
		div.mdl-layout__drawer
			span.mdl-layout-title
				='1000 Things App'
			nav.mdl-navigation
				a.mdl-navigation__link(href="") Sign Up
				a.mdl-navigation__link(href="") Log In
		main.mdl-layout__content
			article.section--center.mdl-grid
				section.mdl-cell.mdl-cell--12-col
					div.one-thousand.wide-card-layout.mdl-card.mdl-shadow--2dp
						div.mdl-card__title
							h2.mdl-card__title-text
								='Welcome'
						div.mdl-card__supporting-text
							="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris sagittis pellentesque lacus eleifend lacinia. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris sagittis pellentesque lacus eleifend lacinia. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris sagittis pellentesque lacus eleifend lacinia. "
				section.mdl-cell.mdl-cell--6-col
					form#logIn(action="#")
						div.one-thousand-card-layout.mdl-card.mdl-shadow--2dp
							div.mdl-card__title.mdl-card--expand
								legend.mdl-card__title-text="If you already have an account, Log in"
							div.mdl-card__supporting-text
								div.mdl-textfield.mdl-js-textfield
									input#logInName.mdl-textfield__input(type="text")
									label.mdl-textfield__label(for="logInName") Your Name
								div.mdl-textfield.mdl-js-textfield
									input#logInPassword.mdl-textfield__input(type="password")
									label.mdl-textfield__label(for="logInPassword") Your Password
								div.one-thousand-logIn-forgetPass-layout
									a(href="") Forgot your password?
							div.mdl-card__actions
								div.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
									button.one-thousand-button-layout.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect--align-right
										='Log In'
				section.mdl-cell.mdl-cell--6-col
					form#signUp(action="#")
						div.one-thousand-card-layout.mdl-card.mdl-shadow--2dp
							div.mdl-card__title.mdl-card--expand
								legend.mdl-card__title-text="Or create your account"
							div.mdl-card__supporting-text
								div.mdl-textfield.mdl-js-textfield
									input#signUpName.mdl-textfield__input(type="text")
									label.mdl-textfield__label(for="logInName") Your Name
								div.mdl-textfield.mdl-js-textfield
									input#signUpEmail.mdl-textfield__input(type="text")
									label.mdl-textfield__label(for="logInEmail") Your Email
								div.mdl-textfield.mdl-js-textfield
									input#signUpPassword.mdl-textfield__input(type="password")
									label.mdl-textfield__label(for="logInPassword") Choose Password
							div.mdl-card__actions
								div.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
									button.one-thousand-button-layout.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect
										='Sign Up'
			footer.mdl-mini-footer.mdl-color--grey-400
				div.mdl-mini-footer__left-section
					ul.mdl-mini-footer__link-list
						li
							a(href="#") Help
						li
							a(href="#") Contact				
				div.mdl-mini-footer__right-section
					h6.mdl-logo
						img(src='/img/logoBW.png' alt='1000thingsapp')



		script(src='/js/built.min.js')